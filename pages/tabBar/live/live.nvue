		    <input
		      type="text"
		      placeholder="说点什么..."
		      class="input_text"
		      v-model="sendInfo"
		      confirm-type="send"
		      confirm-hold
		      @blur="blurFocus"
		      :focus="inputFocusStatus"
		      @confirm="sendMessage"
		      :cursor-spacing="10"
		    />
		    <view class="rightbtn">
				<!-- <view class="iconfont icon-biaoqing">
					
				</view> -->
				<view class="iconfont icon-send" @click="sendMessage(sendInfo)">
					
				</view>
		    </view>
		  </view>
